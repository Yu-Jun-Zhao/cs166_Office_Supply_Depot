// GET SHIPPING ADDRESS from an order

app.get('/search/:s_addy', (req, res)=>{
  const { order_id } = req.params;
  const s_addy = `select * from Shipping_Address where 
                      s_address_id = (select s_address_id from Order where order_id = %${order_id})`;
  connection.query(s_addy, (err, results)=>{
      if(err)
          return res.send(err)
      else {
          return res.json({
              data: results})
      }
  });
});

